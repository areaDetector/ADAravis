  field(OUT,  "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))ARAVIS_HWIMAGEMODE")
  field(ZNAM, "No")
  field(ONAM, "Yes")
  info(autosaveFields, "DESC VAL")
}
